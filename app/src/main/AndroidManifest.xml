<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.gudangumkm">
    
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".GudangUMKMApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.GudangUMKM">

        <!-- Splash Screen -->
        <activity
            android:name=".SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.GudangUMKM.Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <!-- Login -->
        <activity
            android:name=".LoginActivity"
            android:exported="false"/>

        <!-- Register -->
        <activity
            android:name=".RegisterActivity"
            android:exported="false"/>

        <!-- Main Activity with Bottom Navigation -->
        <activity
            android:name=".MainActivity"
            android:exported="false"/>

        <!-- Tambah Barang -->
        <activity
            android:name=".TambahBarangActivity"
            android:exported="false"/>

        <!-- Edit Barang -->
        <activity
            android:name=".EditBarangActivity"
            android:exported="false"/>

        <!-- Stok Masuk -->
        <activity
            android:name=".StokMasukActivity"
            android:exported="false"/>

        <!-- Stok Keluar -->
        <activity
            android:name=".StokKeluarActivity"
            android:exported="false"/>

        <!-- Monitoring -->
        <activity
            android:name=".MonitoringActivity"
            android:exported="false"/>

    </application>

</manifest>
